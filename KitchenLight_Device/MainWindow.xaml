<Window x:Class="KitchenLight_Device.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitchenLight_Device"
        mc:Ignorable="d"
        Title="Light-Device" Height="400" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock x:Name="tbConnectingMessage"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">

            </TextBlock>
            <TextBlock x:Name="LightOnOf"/>
            <Button x:Name="btnOnOff" Click="BtnOnOff_OnClick" Content="Turn On" Padding="10 5" Margin="0 20 0 0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
